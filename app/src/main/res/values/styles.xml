<resources>
	
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@font/roboto</item>
		<item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
	
	</style>
	
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
	
	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		
	</style>
	
	<style name="AppTheme.CartActivity" parent="AppTheme">
		<item name="android:homeAsUpIndicator">@drawable/ic_close_white_24dp</item>
	</style>
	
	<style name="AppTheme.Checkout" parent="AppTheme">
		<item name="android:homeAsUpIndicator">@drawable/ic_close_white_24dp</item>
		<item name="colorAccent">@color/colorGreen</item>
	
	</style>
	<style name="AppTheme.ProductDetail" parent="AppTheme">
		<item name="android:homeAsUpIndicator">@drawable/ic_close_white_24dp</item>
	</style>
	
	<style name="AppTheme.ChangeLocation" parent="AppTheme">
		<item name="android:homeAsUpIndicator">@drawable/ic_close_white_24dp</item>
	</style>
	
	
	<style name="AppBottomSheetDialogTheme"
	       parent="Theme.Design.Light.BottomSheetDialog">
		<item name="bottomSheetStyle">@style/AppModalStyle</item>
	</style>
	
	<style name="AppModalStyle"
	       parent="Widget.Design.BottomSheet.Modal">
		<item name="behavior_peekHeight">@dimen/custom_peek_height</item>
	</style>
	
	
	<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@drawable/immicart_splash</item>
		<item name="android:statusBarColor">@android:color/white</item>
	</style>
	
	<style name="AuthenticationBackground" parent="AppTheme">
		<item name="android:statusBarColor">@android:color/white</item>
	</style>
	
	<dimen name="custom_peek_height">200dp</dimen>
	
	<style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/rounded_bottomsheet</item>
	</style>
	
	<style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
		<item name="android:windowIsFloating">false</item>
		<item name="bottomSheetStyle">@style/BottomSheet</item>
	</style>
	
	<style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog"/>
	
	<style name="Icon">
		<item name="android:padding">4dp</item>
		<item name="android:tint">@color/lightGrey_</item>
	</style>
	
	<style name="Icon.Clickable">
		<item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
	</style>
	
	<style name="VisionSearchTheme" parent="Theme.MaterialComponents.NoActionBar">
	
	</style>
	
	<style name="GreenTheme" parent="FirebaseUI">
		<!-- Required for sign-in flow styling -->
		<item name="colorPrimary">@color/colorGreen</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="colorAccent">@color/blue</item>
		
		<!--<item name="colorControlNormal">@color/material_green_500</item>-->
		<!--<item name="colorControlActivated">@color/material_lime_a700</item>-->
		<!--<item name="colorControlHighlight">@color/material_green_a200</item>-->
	</style>
	
	<style name="CheckOutTheme" parent="AppTheme">
		<item name="colorAccent">@color/colorGreen</item>
	
	</style>
	
	<style name="TextLabel" parent="TextAppearance.AppCompat">
		<!-- Hint color and label color in FALSE state -->
		<item name="android:textColorHint">@color/lightGrey_</item>
		<item name="android:textSize">20sp</item>
		<!-- Label color in TRUE state and bar color FALSE and TRUE State -->
		<item name="colorAccent">@color/colorGreen</item>
		<!--<item name="colorControlNormal">@color/colorGreen_</item>-->
		<!--<item name="colorControlActivated">@color/Color Name</item>-->
	</style>
</resources>
