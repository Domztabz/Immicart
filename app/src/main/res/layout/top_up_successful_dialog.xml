<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
	
	<ImageView
			android:background="@drawable/successful_bg"
			android:id="@+id/error_img"
			android:layout_marginTop="20dp"
			android:layout_centerHorizontal="true"
			android:scaleType="centerInside"
			android:src="@drawable/ic_done_white_24dp"
			android:layout_width="96dp"
			android:layout_height="96dp"/>
	
	<TextView
			android:id="@+id/top_up_title"
			android:layout_marginTop="20dp"
			android:layout_centerHorizontal="true"
			android:textStyle="bold"
			android:layout_below="@id/error_img"
			android:textSize="24sp"
			android:text="Top up Successful"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	<TextView
			android:id="@+id/message"
			android:gravity="center"
			android:layout_margin="20dp"
			android:textSize="16sp"
			android:layout_marginTop="20dp"
			android:layout_below="@+id/top_up_title"
			android:text="KES 500 was sucessfully deposited to your Immicart Wallet"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	<Button
			android:layout_margin="20dp"
			android:layout_below="@+id/message"
			android:id="@+id/close_dialog"
			android:layout_marginBottom="@dimen/standard_margin"
			android:textSize="20sp"
			android:fontFamily="@font/roboto_medium"
			android:background="@drawable/pay_design"
			android:textColor="@android:color/white"
			android:text="Okay"
			android:textAllCaps="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

</RelativeLayout>