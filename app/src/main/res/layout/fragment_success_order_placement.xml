<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="@color/colorGreen"
                android:gravity="center"
             tools:context=".delivery.checkout.SuccessOrderPlacementFragment">
	
	<!-- TODO: Update blank fragment layout -->
	<TextView
			android:textColor="@android:color/white"
			android:id="@+id/thanks"
			android:gravity="center_horizontal"
			android:textSize="20sp"
			android:textStyle="bold"
			android:text="Thanks - Order Received!"
			android:layout_width="match_parent"
	          android:layout_height="wrap_content"/>
	<TextView
			android:id="@+id/assign_tv"
			android:layout_marginTop="20dp"
			android:textColor="@android:color/white"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/thanks"
			android:text="We will assign a shopper and get it delivered"
			android:layout_width="wrap_content"
	          android:layout_height="wrap_content"/>
	<Button
			android:layout_below="@+id/assign_tv"
			android:id="@+id/complete_order_button"
			android:textSize="20sp"
			android:fontFamily="@font/roboto_medium"
			android:background="@drawable/log_out_bg"
			android:textColor="@color/colorGreen"
			android:text="Complete"
			android:textAllCaps="false"
			android:layout_margin="40dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

</RelativeLayout>