<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".delivery.authentication.MyAccountActivity">
	
	<RelativeLayout
			android:id="@+id/toolbar_ll"
			android:background="@android:color/white"
			android:gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize">
		<ImageButton
				android:layout_centerVertical="true"
				style="@style/Widget.AppCompat.Button.Borderless"
				android:background="@null"
				android:src="@drawable/ic_close_white_24dp"
				android:layout_width="56dp"
				android:layout_height="56dp"/>
		<ImageView
				android:layout_centerInParent="true"
				android:layout_marginStart="20dp"
				android:id="@+id/immicart_logo"
				android:src="@drawable/immicart_logo_01"
				android:layout_width="140dp"
				android:layout_height="40dp"/>
	
	</RelativeLayout>
	
	
	
	
	<LinearLayout
			android:id="@+id/account_info_ll"
			android:layout_margin="20dp"
			android:gravity="center_vertical"
			android:layout_below="@+id/toolbar_ll"
			android:layout_width="match_parent"
	              android:layout_height="wrap_content">
		
		<TextView
				android:layout_weight="1"
				android:fontFamily="@font/roboto_medium"
				android:textSize="32sp"
				android:text="Hi, Dominic"
				android:layout_width="0dp"
		          android:layout_height="wrap_content"/>
		
		<ImageView
				android:src="@drawable/ic_account_circle_green_24dp"
				android:layout_width="64dp"
		           android:layout_height="64dp"/>
		
	</LinearLayout>
	
	<LinearLayout
			android:id="@+id/acct_settings_ll"
			android:layout_margin="20dp"
			android:gravity="center_vertical"
			android:layout_below="@+id/account_info_ll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<ImageView
				android:src="@drawable/ic_settings_black_24dp"
				android:layout_width="40dp"
				android:layout_height="40dp"/>
		<TextView
				android:layout_weight="1"
				android:layout_marginStart="20dp"
				android:textSize="20sp"
				android:text="Your account settings"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<ImageView
				android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
				android:layout_width="40dp"
				android:layout_height="40dp"/>
	
	</LinearLayout>
	
	<LinearLayout
			android:id="@+id/inivite_frds_ll"
			android:layout_margin="20dp"
			android:gravity="center_vertical"
			android:layout_below="@+id/acct_settings_ll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<ImageView
				android:src="@drawable/ic_share_grey_24dp"
				android:layout_width="40dp"
				android:layout_height="40dp"/>
		<TextView
				android:layout_weight="1"
				android:layout_marginStart="20dp"
				android:textSize="20sp"
				android:text="Invite friends"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<ImageView
				android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
				android:layout_width="40dp"
				android:layout_height="40dp"/>
	
	</LinearLayout>
	
	
	<LinearLayout
			android:id="@+id/become_a_shopper_ll"
			android:layout_margin="20dp"
			android:gravity="center_vertical"
			android:layout_below="@+id/inivite_frds_ll"
			android:layout_width="match_parent"
	              android:layout_height="wrap_content">
		<ImageView
				android:src="@drawable/ic_shopping_basket_black_24dp"
				android:layout_width="40dp"
				android:layout_height="40dp"/>
		<TextView
				android:layout_weight="1"
				android:layout_marginStart="20dp"
				android:textSize="20sp"
				android:text="Become a Shopper"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<ImageView
				android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
				android:layout_width="40dp"
				android:layout_height="40dp"/>
		
	</LinearLayout>
	
	
	
	
	<Button
			android:layout_alignParentBottom="true"
			android:visibility="visible"
			app:fontFamily="@font/roboto_medium"
			android:layout_marginStart="20dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="40dp"
			android:layout_marginEnd="20dp"
			android:textStyle="normal"
			android:textAllCaps="false"
			android:id="@+id/log_out_btn"
			android:textColor="@color/colorGreen"
			android:background="@drawable/log_out_bg"
			android:textSize="24sp"
			android:text=" Log out "
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

</RelativeLayout>