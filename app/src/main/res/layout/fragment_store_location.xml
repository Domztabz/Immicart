<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
		android:background="@android:color/white"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".delivery.authentication.StoreLocationFragment"
		xmlns:app="http://schemas.android.com/apk/res-auto">
	
	
	<Button
			app:fontFamily="@font/roboto_medium"
			android:layout_margin="8dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:textAllCaps="false"
			android:id="@+id/log_in_btn"
			android:textColor="@android:color/white"
			android:background="@drawable/time_bg"
			android:textSize="20sp"
			android:text=" Log in "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	
	<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
            android:layout_height="match_parent">
		
	<RelativeLayout
			android:layout_marginTop="80dp"
			android:layout_width="match_parent"
	                android:layout_height="wrap_content">
		<ImageView
				android:layout_marginTop="10dp"
				android:id="@+id/immicart_logo"
				android:layout_centerHorizontal="true"
				android:layout_below="@+id/go_back_button"
				android:layout_alignParentTop="true"
				android:src="@drawable/immicart_logo_01"
				android:layout_width="160dp"
				android:layout_height="60dp"/>
		
	<TextView
			android:layout_below="@+id/immicart_logo"
			android:id="@+id/tagline"
			android:textStyle="bold"
			android:textSize="24sp"
			android:layout_margin="10dp"
			android:text="Offers delivered in as little as 1 hour"
			android:gravity="center"
			android:layout_width="match_parent"
	          android:layout_height="wrap_content"/>
	<EditText
			android:id="@+id/location_edittxt"
			android:hint="Location"
			android:layout_margin="20dp"
			android:padding="12dp"
			android:layout_below="@+id/tagline"
			android:background="@drawable/search_location"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	<Button
			app:fontFamily="@font/roboto_medium"
			android:layout_below="@+id/location_edittxt"
			android:layout_margin="20dp"
			android:textAllCaps="false"
			android:id="@+id/continue_btn"
			android:textColor="@android:color/white"
			android:background="@drawable/time_bg"
			android:textSize="20sp"
			android:text=" Continue "
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	<LinearLayout
			android:id="@+id/login_link_ll"
			android:gravity="center"
			android:layout_below="@+id/continue_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
				android:textSize="18sp"
				android:text="Already have an account? "
				android:layout_width="wrap_content"
		          android:layout_height="wrap_content"/>
		<TextView
				android:id="@+id/login_txtview"
				android:clickable="true"
				android:layout_marginStart="8dp"
				android:textStyle="bold"
				android:textColor="@color/colorGreen"
				android:textSize="18sp"
				android:text="Log in "
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<TextView
			android:layout_margin="20dp"
			android:layout_centerHorizontal="true"
			android:textSize="16sp"
			android:textStyle="bold"
			android:textColor="@color/colorGreen"
			android:text="*Terms apply"
			android:layout_below="@+id/login_link_ll"
			android:layout_width="wrap_content"
	          android:layout_height="wrap_content"/>
	</RelativeLayout>
	
	</androidx.core.widget.NestedScrollView>


</RelativeLayout>