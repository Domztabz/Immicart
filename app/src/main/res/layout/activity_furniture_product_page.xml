<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".delivery.furniture.FurnitureProductPageActivity">
	<LinearLayout
			android:paddingTop="4dp"
			android:paddingBottom="4dp"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:id="@+id/toolbar"
			android:background="@android:color/white"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize">
		
		<ImageButton
				android:id="@+id/go_back_button"
				android:layout_margin="8dp"
				android:background="@android:color/white"
				android:src="@drawable/ic_keyboard_arrow_left_green_24dp"
				android:layout_height="36dp"
				android:layout_width="36dp"/>
		<View android:layout_width="0dp"
		      android:layout_weight="1"
		      android:layout_height="wrap_content"/>
		
		<ImageButton
				android:id="@+id/share_ll"
				android:layout_margin="8dp"
				android:background="@android:color/white"
				android:src="@drawable/ic_share_grey_24dp"
				android:layout_height="36dp"
				android:layout_width="36dp"/>
		
		<FrameLayout
				android:layout_alignParentEnd="true"
				android:clickable="true"
				android:focusable="true"
				android:visibility="visible"
				android:id="@+id/cart_frame_layout"
				android:layout_marginStart="8dp"
				android:layout_marginEnd="8dp"
				android:layout_gravity="top|end"
				android:layout_width="40dp"
				android:layout_height="40dp">
			
			<ImageButton
					android:clickable="false"
					android:id="@+id/cartImageButton"
					style="@style/Base.Widget.AppCompat.Button.Borderless"
					android:background="@null"
					android:layout_gravity="bottom"
					android:src="@drawable/ic_shopping_cart_black_24dp"
					android:layout_width="24dp"
					android:layout_height="24dp" />
			
			<TextView
					android:clickable="false"
					android:id="@+id/badge"
					android:layout_gravity="top|end"
					android:gravity="center"
					android:text="0"
					android:textColor="@android:color/white"
					android:background="@drawable/badge_bg"
					android:layout_width="30dp"
					android:layout_height="30dp"/>
		</FrameLayout>
	
	</LinearLayout>
	<androidx.core.widget.NestedScrollView
		android:layout_below="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<RelativeLayout
				android:descendantFocusability="blocksDescendants"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<TextView
					android:textStyle="bold"
					android:layout_margin="20dp"
					android:id="@+id/product_description"
					android:textSize="18sp"
					android:text="Nia Velvet 81.5 Square Arm Sleeper"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			
			<LinearLayout
					android:id="@+id/review_ll"
					android:gravity="center_vertical"
					android:layout_marginStart="20dp"
					android:layout_below="@+id/product_description"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<androidx.appcompat.widget.AppCompatRatingBar
						android:id="@+id/ratingBar"
						android:rating="4"
						style="?android:attr/ratingBarStyleSmall"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />
				<TextView
						android:layout_gravity="start|center_vertical"
						android:layout_marginStart="8dp"
						android:id="@+id/reviews_textview"
						android:textSize="18sp"
						android:text="100 reviews"
						android:layout_width="0dp"
						android:layout_weight="1"
						android:layout_height="wrap_content" />
				<!--<CheckBox-->
						<!--android:layout_margin="8dp"-->
						<!--android:stateListAnimator="@animator/scale"-->
						<!--android:layout_marginStart="40dp"-->
						<!--android:checked="false"-->
						<!--android:button="@null"-->
						<!--android:background="@drawable/favorite_icon"-->
						<!--android:layout_width="36dp"-->
						<!--android:layout_height="36dp" />-->
			</LinearLayout>
			<androidx.viewpager.widget.ViewPager
					android:layout_below="@+id/review_ll"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="20dp"
					android:id="@+id/pager"
					android:layout_width="360dp"
					android:layout_height="360dp"
			/>
			<com.pixelcan.inkpageindicator.InkPageIndicator
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:layout_below="@+id/pager"
					android:id="@+id/indicator"
					android:padding="10dp"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					app:ipi_dotDiameter="8dp"
					app:ipi_dotGap="8dp"
					app:ipi_animationDuration="320"
					app:ipi_pageIndicatorColor="@android:color/darker_gray"
					app:ipi_currentPageIndicatorColor="@android:color/black"/>
			<FrameLayout
					android:layout_below="@+id/indicator"
					android:id="@+id/container_bottom"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			<LinearLayout
					android:layout_margin="20dp"
					android:id="@+id/price"
					android:layout_below="@+id/container_bottom"
					android:layout_width="match_parent"
			              android:layout_height="wrap_content">
				<TextView
						android:textStyle="bold"
						android:textSize="20dp"
						android:text="KES 200,000"
						android:layout_width="wrap_content"
				          android:layout_height="wrap_content"/>
				<TextView
						android:id="@+id/old_price"
						android:textColor="@color/lightGrey_"
						android:textStyle="bold"
						android:layout_marginStart="10dp"
						android:textSize="16dp"
						android:text="KES 300,000"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
				<TextView
						android:textStyle="bold"
						android:textColor="@color/red"
						android:layout_marginStart="10dp"
						android:textSize="16dp"
						android:text="33% OFF"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:id="@+id/quantity"
					android:layout_below="@+id/price"
					android:gravity="center_vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:layout_weight="1"
						android:textSize="18sp"
						android:text="Quantity"
						android:layout_width="wrap_content"
				          android:layout_height="wrap_content"/>
				<LinearLayout
						android:layout_margin="4dp"
						android:padding="12dp"
						android:layout_marginStart="4dp"
						android:gravity="center"
						android:orientation="horizontal"
						android:background="@android:color/white"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
					
					<ImageButton
							android:id="@+id/reduceQuantityBtn"
							android:background="@android:color/white"
							android:layout_marginStart="8dp"
							android:src="@drawable/ic_remove_primary_color_24dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<TextView
							android:id="@+id/quantityTv"
							android:layout_marginStart="36dp"
							android:layout_marginEnd="36dp"
							android:text="1"
							android:textStyle="bold"
							android:textSize="24sp"
							android:textColor="@color/colorPrimary"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<ImageButton
							android:id="@+id/add_quantity"
							android:background="@android:color/white"
							android:layout_marginEnd="8dp"
							android:src="@drawable/ic_add_primary_color_24dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				
				</LinearLayout>
			</LinearLayout>
			<View
					android:layout_marginTop="16dp"
					android:layout_marginBottom="16dp"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:id="@+id/separator"
					android:layout_below="@+id/quantity"
					android:background="@color/lightGrey"
					android:layout_width="match_parent"
					android:layout_height="1dp"/>
			<Button
					android:textStyle="bold"
					android:id="@+id/add_to_cart_btn"
					android:layout_below="@+id/separator"
					android:padding="8dp"
					android:textSize="16sp"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:layout_marginBottom="20dp"
					android:textColor="@android:color/white"
					android:background="@drawable/pay_button_design"
					android:elevation="24dp"
					android:textAllCaps="false"
					android:text="Add to Cart"
					android:layout_width="match_parent"
					android:layout_height="48dp"/>
			<LinearLayout
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:layout_below="@+id/add_to_cart_btn"
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
			<TextView
					android:textStyle="bold"
					android:textSize="20sp"
					android:text="Product Overview"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
				<LinearLayout
						android:focusable="true"
						android:clickable="true"
						android:id="@+id/glance"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="16dp"
						android:gravity="center_vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
					
					<TextView
							android:layout_weight="1"
							android:textSize="18sp"
							android:text="At a Glance"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<ImageView
							android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
							android:layout_width="40dp"
							android:layout_height="40dp"/>
				
				</LinearLayout>
				<View
						android:background="@color/lightGrey"
						android:layout_width="match_parent"
						android:layout_height="1dp"/>
				
				<LinearLayout
						android:focusable="true"
						android:clickable="true"
						android:id="@+id/info"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="16dp"
						android:gravity="center_vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
					
					<TextView
							android:layout_weight="1"
							android:textSize="18sp"
							android:text="Information"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<ImageView
							android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
							android:layout_width="40dp"
							android:layout_height="40dp"/>
				
				</LinearLayout>
				<View
						android:background="@color/lightGrey"
						android:layout_width="match_parent"
				      android:layout_height="1dp"/>
				<LinearLayout
						
						android:focusable="true"
						android:clickable="true"
						android:id="@+id/specifications"
						android:layout_marginTop="16dp"
						android:layout_marginBottom="16dp"
						android:gravity="center_vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
					
					<TextView
							android:layout_weight="1"
							android:textSize="18sp"
							android:text="Specifications"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<ImageView
							android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
							android:layout_width="40dp"
							android:layout_height="40dp"/>
				
				</LinearLayout>
				<View
						android:layout_marginBottom="40dp"
						android:background="@color/lightGrey"
						android:layout_width="match_parent"
						android:layout_height="1dp"/>
			</LinearLayout>
		
		</RelativeLayout>
		
	</androidx.core.widget.NestedScrollView>
</RelativeLayout>