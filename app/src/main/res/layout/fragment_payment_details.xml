<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".wallet.PaymentDetailsFragment"
		android:id="@+id/frameLayout2">
	
	
	<Button
			android:text="Continue to Mpesa"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:background="@drawable/pay_design"
			android:textColor="@android:color/white"
			android:textSize="16sp"
			android:textAllCaps="false"
			android:id="@+id/button"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toBottomOf="@+id/ll_amount"
			android:layout_marginBottom="144dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
	<TextView
			android:text="M-Pesa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/mPesa"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="28dp"
			android:textSize="30sp"
			android:fontFamily="@font/roboto_bold"
			app:layout_constraintHorizontal_bias="0.056"/>
	<TextView
			android:text="Enter number eg. 701234567"
			android:visibility="invisible"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/errorPhone"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp"
			app:layout_constraintTop_toBottomOf="@+id/ll"
			android:layout_marginTop="16dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:fontFamily="@font/roboto_mono"
			android:textColorLink="#00F80202"
			android:textColor="#F80202"/>
	<TextView
			android:text="Enter amount above sh 10"
			android:layout_width="0dp"
			android:visibility="invisible"
			android:textColor="#F80202"
			android:layout_height="wrap_content"
			android:id="@+id/textView7"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp"
			app:layout_constraintTop_toBottomOf="@+id/ll_amount"
			android:layout_marginTop="8dp"
			android:fontFamily="@font/roboto_mono"/>
	<LinearLayout
			android:id="@+id/ll"
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			app:layout_constraintTop_toBottomOf="@+id/mPesa"
			android:layout_marginTop="48dp">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="254"
				android:textSize="24sp"
				android:layout_marginStart="16dp"
				android:textColor="@android:color/black"
				android:fontFamily="@font/roboto_black"
				android:padding="16dp"
		/>
		<EditText
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:inputType="phone"
				android:id="@+id/phoneNumber"
				android:layout_marginEnd="8dp"
				android:background="@drawable/et_bg_no_white"
				android:hint="701234567"
				android:padding="16dp"
				android:paddingRight="8dp"
				android:textSize="24sp"
				android:textColor="@android:color/black"
				android:fontFamily="@font/roboto_black"
				tools:layout_editor_absoluteY="137dp"/>
	</LinearLayout>
	<LinearLayout
			android:id="@+id/ll_amount"
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/errorPhone"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button"
			android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="1.0">
		
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Ksh"
				android:textSize="24sp"
				android:padding="16dp"
				android:layout_marginStart="16dp"
				android:textColor="@android:color/black"
				android:fontFamily="@font/roboto_black"
		/>
		<EditText
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:inputType="phone"
				android:id="@+id/mpesaAmount"
				android:layout_marginEnd="8dp"
				android:background="@drawable/et_bg_no_white"
				android:hint="500"
				android:padding="16dp"
				android:paddingRight="8dp"
				android:textSize="24sp"
				android:textColor="@android:color/black"
				android:fontFamily="@font/roboto_black"
				tools:layout_editor_absoluteY="137dp"/>
	</LinearLayout>
	<TextView
			android:text="Enter amount"
			android:layout_width="wrap_content"
			android:layout_height="35dp"
			android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
			app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/errorPhone"
			android:layout_marginTop="44dp" android:fontFamily="@font/roboto_mono"/>
</androidx.constraintlayout.widget.ConstraintLayout>