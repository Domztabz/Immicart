<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:padding="4dp"
                android:layout_height="wrap_content">
	<FrameLayout
			android:id="@+id/image_fl"
			android:layout_alignParentTop="true"
			android:layout_width="wrap_content"
	             android:layout_height="wrap_content">
		
	<ImageView
			android:scaleType="centerInside"
			android:src="@drawable/aerial_soap"
			android:id="@+id/product_picture"
			android:layout_width="200dp"
			android:layout_height="200dp"/>
	<ImageButton
			
			android:layout_gravity="end|top"
			android:layout_alignParentEnd="true"
			android:background="@drawable/add_product_bg"
			android:src="@drawable/ic_add_circle_outline_green_24dp"
			android:layout_width="48dp"
	             android:layout_height="48dp"/>
	</FrameLayout>

 <LinearLayout
		 android:layout_marginTop="10dp"
		 android:id="@+id/price_ll"
		 android:gravity="start"
		 android:orientation="horizontal"
		 android:layout_below="@+id/image_fl"
		 android:layout_width="match_parent"
               android:layout_height="wrap_content">
	 <TextView
			 android:textStyle="bold"
			 android:textColor="@color/colorAccent"
			 android:textSize="18sp"
			 android:id="@+id/offer_price"
			 android:text="KES 699"
			 android:layout_width="wrap_content"
	           android:layout_height="wrap_content"/>
	 <TextView
			 android:textStyle="bold"
			 android:textColor="@color/lightGrey"
			 android:textSize="18sp"
			 android:layout_marginStart="10dp"
			 android:id="@+id/normal_price"
			 android:text="KES 619"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"/>
	 
 </LinearLayout>
	<TextView
			android:textSize="16sp"
			android:id="@+id/amount_off"
			android:layout_below="@+id/price_ll"
			android:text="KES 80 off"
			android:layout_width="wrap_content"
	          android:layout_height="wrap_content"/>
	<TextView
			android:layout_marginTop="8dp"
			android:textSize="16sp"
			android:id="@+id/product_name"
			android:gravity="start"
			android:layout_below="@+id/amount_off"
			android:text="Aerial washing powder"
			android:layout_width="match_parent"
	          android:layout_height="wrap_content"/>
	<TextView
			android:layout_marginTop="8dp"
			android:textColor="@color/lightGrey"
			android:gravity="start"
			android:layout_below="@+id/product_name"
			android:text="2 kg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
</RelativeLayout>