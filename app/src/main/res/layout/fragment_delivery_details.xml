<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:segmentedgroup="http://schemas.android.com/tools"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
	
	<info.hoang8f.android.segmented.SegmentedGroup
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_margin="8dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:gravity="center_horizontal"
			segmentedgroup:sc_border_width="2dp"
			segmentedgroup:sc_corner_radius="16dp"
			android:id="@+id/segmentedGroup">
		<RadioButton
				android:id="@+id/segmented_delivery"
				android:layout_width="0dp"
				android:layout_weight="50"
				android:layout_height="wrap_content"
				android:text="@string/delivery"
				android:textSize="24sp"
				style="@style/RadioButton"/>
		
		<RadioButton
				android:id="@+id/segmented_pick_up"
				android:layout_width="0dp"
				android:layout_weight="50"
				android:layout_height="wrap_content"
				android:text="@string/pick_up"
				android:textSize="24sp"
				style="@style/RadioButton"/>
	</info.hoang8f.android.segmented.SegmentedGroup>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_location_on_black_24dp"
			android:id="@+id/imageViewLocation"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/segmentedGroup"
			android:layout_marginTop="16dp"
			android:layout_marginStart="16dp"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_access_time_black_24dp"
			android:id="@+id/imageViewTime"
			app:layout_constraintTop_toBottomOf="@+id/imageViewLocation"
			android:layout_marginTop="16dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_phone_android_black_24dp"
			android:id="@+id/imageViewPhone"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/imageViewTime"/>
	<TextView
			android:text="@string/add_delievry_address"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textViewAddLocation"
			app:layout_constraintStart_toEndOf="@+id/imageViewLocation"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toBottomOf="@+id/segmentedGroup"
			android:layout_marginTop="16dp"
			android:textSize="24sp"/>
	<TextView
			android:text="@string/select_delivery_date_and_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textViewDeliveryTime"
			android:textSize="24sp"
			app:layout_constraintStart_toEndOf="@+id/imageViewTime"
			android:layout_marginStart="16dp"
			app:layout_constraintTop_toBottomOf="@+id/textViewAddLocation"
			android:layout_marginTop="24dp"/>
	<TextView
			android:text="@string/mobile_number"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textViewPhoneNumber"
			android:layout_marginTop="20dp"
			app:layout_constraintTop_toBottomOf="@+id/textViewDeliveryTime"
			app:layout_constraintStart_toEndOf="@+id/imageViewPhone"
			android:layout_marginStart="16dp"
			android:textSize="24sp"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
			segmentedgroup:layout_editor_absoluteY="73dp"
			android:id="@+id/imageViewArrowLocation"
			app:layout_constraintStart_toEndOf="@+id/textViewAddLocation"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintHorizontal_bias="0.926"
			segmentedgroup:ignore="MissingConstraints"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
			android:id="@+id/imageViewArrowTime"
			app:layout_constraintStart_toEndOf="@+id/textViewDeliveryTime"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toBottomOf="@+id/imageViewArrowLocation"
			app:layout_constraintHorizontal_bias="0.876"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
			segmentedgroup:layout_editor_absoluteY="186dp"
			android:id="@+id/imageViewArrowPhone"
			app:layout_constraintStart_toEndOf="@+id/textViewPhoneNumber"
			android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintHorizontal_bias="0.937" segmentedgroup:ignore="MissingConstraints"/>
	<Button
			android:text="@string/place_order"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/button_place_order" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp"
			android:textAllCaps="false"
			android:textSize="24sp"
			android:background="@drawable/pay_button_design"
			android:textColor="@android:color/white"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>