<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		xmlns:segmentedgroup="http://schemas.android.com/tools">
	
	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		<info.hoang8f.android.segmented.SegmentedGroup
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintStart_toStartOf="parent"
				android:layout_marginStart="8dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_margin="8dp"
				android:padding="8dp"
				android:orientation="horizontal"
				android:gravity="center_horizontal"
				segmentedgroup:sc_border_width="2dp"
				segmentedgroup:sc_corner_radius="16dp"
				android:id="@+id/segmentedGroup">
			<RadioButton
					android:id="@+id/segmented_delivery"
					android:layout_width="0dp"
					android:layout_weight="50"
					android:layout_height="wrap_content"
					android:text="@string/delivery"
					android:textSize="24sp"
					android:padding="@dimen/standard_margin"
					style="@style/RadioButton"/>
			
			<RadioButton
					android:id="@+id/segmented_pick_up"
					android:layout_width="0dp"
					android:layout_weight="50"
					android:layout_height="wrap_content"
					android:text="@string/pick_up"
					android:textSize="24sp"
					android:padding="@dimen/standard_margin"
					style="@style/RadioButton"/>
		</info.hoang8f.android.segmented.SegmentedGroup>
		
		<LinearLayout
				android:layout_below="@+id/segmentedGroup"
				android:clickable="true"
				android:id="@+id/layoutLocation"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:focusable="true" segmentedgroup:ignore="UseCompoundDrawables">
			
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:srcCompat="@drawable/ic_location_on_black_24dp"
					android:id="@+id/imageViewLocation"
					android:layout_marginStart="@dimen/standard_margin" segmentedgroup:ignore="ContentDescription"/>
			<TextView
					android:text="@string/add_delievry_address"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/textViewAddLocation"
					app:layout_constraintStart_toEndOf="@+id/imageViewLocation"
					android:layout_marginStart="16dp"
					app:layout_constraintTop_toBottomOf="@+id/segmentedGroup"
					android:layout_marginTop="16dp"
					android:textSize="24sp"
					android:fontFamily="@font/roboto_thin"
					android:layout_weight="1"/>
			<!--<ImageView-->
					<!--android:layout_width="wrap_content"-->
					<!--android:layout_height="wrap_content"-->
					<!--android:layout_marginTop="16dp"-->
					<!--app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"-->
					<!--android:id="@+id/imageView3"-->
					<!--android:layout_marginEnd="@dimen/standard_margin" segmentedgroup:ignore="ContentDescription"/>-->
		</LinearLayout>
		
		<LinearLayout
				android:id="@+id/layoutMyLocation"
				android:layout_below="@id/layoutLocation"
				android:orientation="horizontal"
				android:clickable="true"
				android:focusable="true"
				android:padding="@dimen/standard_margin"
				android:layout_marginStart="@dimen/standard_margin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<androidx.appcompat.widget.AppCompatTextView
					android:id="@+id/textViewAutoCompleteLocation"
					android:layout_weight="1"
					android:layout_marginStart="36dp"
					android:text="@string/default_location"
					android:layout_marginTop="@dimen/standard_margin"
					android:textSize="@dimen/default_text_size"
					app:fontFamily="@font/roboto_thin"
					android:layout_width="0dp"
					android:layout_height="wrap_content"/>
			<androidx.appcompat.widget.AppCompatImageView
					app:srcCompat="@drawable/ic_edit_location_black_24dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			
		</LinearLayout>
		<include layout="@layout/location_selection"
		         android:id="@+id/layoutLocationSelection"
		         android:layout_below="@+id/layoutMyLocation"
		         android:layout_height="wrap_content"
		         android:layout_width="match_parent"
		         android:visibility="gone"/>
		
		<LinearLayout
				android:layout_below="@+id/layoutLocationSelection"
				android:clickable="true"
				android:id="@+id/layoutTimeline"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:focusable="true">
			
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:id="@+id/imageViewTime"
					app:srcCompat="@drawable/ic_access_time_black_24dp"
					android:layout_marginStart="@dimen/standard_margin" segmentedgroup:ignore="ContentDescription"/>
			<TextView
					android:text="@string/select_delivery_date_and_time"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/textViewDeliveryTime"
					android:layout_marginStart="16dp"
					android:layout_marginTop="16dp"
					android:textSize="24sp"
					android:fontFamily="@font/roboto_thin"
					android:layout_weight="1"/>
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
					android:id="@+id/imageViewArrowTime"
					android:layout_marginEnd="@dimen/standard_margin"
					segmentedgroup:ignore="ContentDescription"/>
		</LinearLayout>
		<include layout="@layout/delivery_schedule"
		         android:visibility="gone"
		         android:id="@+id/layoutDeliverySchedule"
		         android:layout_below="@+id/layoutTimeline"
		         android:layout_height="wrap_content"
		         android:layout_width="match_parent"/>
		<LinearLayout
				android:clickable="true"
				android:id="@+id/layoutPhone"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@+id/layoutDeliverySchedule"
				android:focusable="true">
			
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:srcCompat="@drawable/ic_phone_android_black_24dp"
					android:id="@+id/imageViewPhone"
					app:layout_constraintStart_toStartOf="parent"
					android:layout_marginTop="16dp"
					android:layout_marginStart="@dimen/standard_margin" segmentedgroup:ignore="ContentDescription"/>
			<TextView
					android:text="@string/mobile_number"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:id="@+id/textViewPhoneNumber"
					android:fontFamily="@font/roboto_thin"
					android:textStyle="bold"
					app:layout_constraintStart_toEndOf="@+id/imageViewPhone"
					android:layout_marginTop="16dp"
					android:layout_marginStart="16dp"
					android:textSize="24sp"
					android:layout_weight="1"/>
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
					android:id="@+id/imageViewArrowPhone"
					android:layout_marginEnd="@dimen/standard_margin"
					segmentedgroup:ignore="ContentDescription"/>
			
		</LinearLayout>
		<include layout="@layout/add_phone_number"
		         android:visibility="gone"
		         android:id="@+id/layoutAddPhoneNumber"
		         android:layout_below="@+id/layoutPhone"
		         android:layout_height="wrap_content"
		         android:layout_width="match_parent"
				android:layout_margin="@dimen/standard_margin"/>
		
		<com.google.android.material.button.MaterialButton
				android:layout_below="@+id/layoutAddPhoneNumber"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="@dimen/standard_margin"
				android:textSize="24sp"
				android:fontFamily="@font/roboto"
				android:textStyle="bold"
				android:background="@drawable/pay_button_design"
				android:textColor="@android:color/white"
				android:text="@string/place_order"
				android:textAllCaps="false"
				android:layout_margin="@dimen/standard_margin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
	</RelativeLayout>
	
</androidx.core.widget.NestedScrollView>