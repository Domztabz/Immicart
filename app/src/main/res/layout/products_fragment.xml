<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".delivery.ProductsFragment">
	
	<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/app_bar"
			android:layout_width="match_parent"
			android:layout_height="280dp"
			android:fitsSystemWindows="true"
			android:theme="@style/AppTheme.AppBarOverlay">
		
		<com.google.android.material.appbar.CollapsingToolbarLayout
				android:id="@+id/toolbar_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fitsSystemWindows="true"
				app:contentScrim="@android:color/white"
				app:layout_scrollFlags="scroll|exitUntilCollapsed">
			
			<FrameLayout
					app:layout_collapseMode="parallax"
					app:layout_collapseParallaxMultiplier="0.8"
					android:id="@+id/frame_layout_parent"
					android:layout_width="match_parent"
					android:layout_height="280dp">
				
				<ImageView
						android:scaleType="fitXY"
						android:src="@drawable/babycare600by450"
						android:layout_width="match_parent"
						android:layout_height="280dp"/>
				
				<LinearLayout
						android:layout_gravity="center_horizontal|bottom"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
					
					<de.hdodenhof.circleimageview.CircleImageView
							android:layout_gravity="center_horizontal"
							android:id="@+id/profile_image"
							android:layout_width="96dp"
							android:layout_height="96dp"
							android:src="@drawable/immicartlogo"
							app:civ_border_width="2dp"
							app:civ_border_color="#FFF"/>
					
					<TextView
							android:layout_gravity="center"
							android:textColor="@android:color/white"
							android:textSize="16sp"
							android:layout_marginTop="20dp"
							android:text="Buy more, pay less"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
					<androidx.appcompat.widget.SearchView
							android:padding="4dp"
							android:queryBackground="@null"
							app:closeIcon="@drawable/ic_close_black__24dp"
							app:searchIcon="@drawable/ic_search_black__24dp"
							app:searchHintIcon="@drawable/ic_search_black__24dp"
							android:id="@+id/search_view_browse"
							android:layout_margin="10dp"
							app:defaultQueryHint="Search malls, stores"
							android:background="@drawable/search_bg"
							app:queryHint="Search Tuskys"
							app:iconifiedByDefault="false"
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
					
					</androidx.appcompat.widget.SearchView>
				</LinearLayout>
			
			
			</FrameLayout>
			
			<androidx.appcompat.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					app:layout_collapseMode="pin"
					app:popupTheme="@style/AppTheme.PopupOverlay" >
				<RelativeLayout android:layout_width="match_parent"
				                android:layout_height="wrap_content">
					
					<ImageView
							android:focusable="true"
							android:clickable="true"
							android:id="@+id/myAccountIcon"
							android:layout_centerVertical="true"
							android:src="@drawable/ic_account_circle_white_24dp"
							android:layout_width="36dp"
					           android:layout_height="36dp"/>
					
					<TextView
							android:id="@+id/store_name"
							android:textSize="16sp"
							android:drawableEnd="@drawable/ic_keyboard_arrow_down_white_24dp"
							android:textStyle="bold"
							android:textColor="@android:color/white"
							android:layout_centerVertical="true"
							android:layout_centerHorizontal="true"
							android:text="Tuskys BebaBeba"
							android:layout_width="wrap_content"
					          android:layout_height="wrap_content"/>
					
					<FrameLayout
							android:layout_alignParentEnd="true"
							android:clickable="true"
							android:focusable="true"
							android:visibility="visible"
							android:id="@+id/cart_frame_layout"
							android:layout_margin="10dp"
							android:layout_gravity="top|end"
							android:layout_width="48dp"
							android:layout_height="60dp">
						
						<ImageButton
								android:clickable="false"
								android:id="@+id/cartImageButton"
								style="@style/Base.Widget.AppCompat.Button.Borderless"
								android:background="@null"
								android:layout_gravity="bottom"
								android:src="@drawable/ic_shopping_cart_black_24dp"
								android:layout_width="24dp"
								android:layout_height="30dp" />
						
						<TextView
								android:clickable="false"
								android:id="@+id/badge"
								android:layout_gravity="top|end"
								android:gravity="center"
								android:text="3"
								android:textColor="@android:color/white"
								android:background="@drawable/badge_bg"
								android:layout_width="30dp"
								android:layout_height="30dp"/>
					</FrameLayout>
				</RelativeLayout>
			</androidx.appcompat.widget.Toolbar>
		
		</com.google.android.material.appbar.CollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>
	
<androidx.core.widget.NestedScrollView
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_below="@+id/app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
	
	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content">
		
		
		<androidx.cardview.widget.CardView
				app:cardElevation="0dp"
				android:id="@+id/delivery_card_view"
				android:layout_width="match_parent"
               android:layout_height="wrap_content">
			<RelativeLayout
					android:padding="4dp"
					android:layout_width="wrap_content"
			                android:layout_height="wrap_content">
				<TextView
						android:textSize="16sp"
						android:id="@+id/delivery_to_tv"
						android:textStyle="bold"
						android:layout_margin="8dp"
						android:text="Delivery to"
						android:layout_width="wrap_content"
				          android:layout_height="wrap_content"/>
				<View
						android:layout_margin="8dp"
						android:id="@+id/view_delivery_to"
						android:layout_below="@+id/delivery_to_tv"
						android:background="@color/lightGrey"
						android:layout_width="wrap_content"
				      android:layout_height="1dp"/>
				      <TextView
						      android:textSize="16sp"
						      android:gravity="center"
						      android:drawablePadding="4dp"
						      android:drawableEnd="@drawable/ic_edit_green_24dp"
						      android:layout_margin="8dp"
						      android:layout_below="@+id/view_delivery_to"
						      android:text="Hall 11 State House Road"
						      android:layout_width="wrap_content"
				                android:layout_height="wrap_content"/>
				
				
				
			</RelativeLayout>
			
		</androidx.cardview.widget.CardView>
		<androidx.recyclerview.widget.RecyclerView
				android:nestedScrollingEnabled="false"
				android:layout_below="@+id/delivery_card_view"
				tools:listitem="@layout/item_category"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				android:id="@+id/category_items_recycler"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		
	</RelativeLayout>
	
	
	
	
	
	

</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
